pipeline {
    agent {
        docker { 
            image 'vivado:2018.3'            
        }
    }
    stages {
        stage('Checkout') {
            steps { 
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh '/bin/bash source /home/vivado/.profile && scripts/build_fpga.sh'
            }
        }
    }
    post { 
        always {             
            archiveArtifacts artifacts: 'vivado/**/impl_1/*.bit'
            cleanWs()
        }
    }
}
