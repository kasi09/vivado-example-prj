pipeline {
    agent {
        docker { 
            image 'vivado:2018.2'
            args '-u vivado'
        }
    }
    stages {
        stage('Checkout') {
            steps { 
                checkout scm
            }
        }
        stage('Build') {
            steps {
                /bin/bash scripts/build_fpga.sh
            }
        }
    }
    post { 
        always {             
            archiveArtifacts artifacts: 'vivado/**/impl_1/*.bit'
            cleanWs()
        }
    }
}